{{#x-card
  title='Signup with Peepchat'
  onSubmit=attrs.onSubmit
  buttonText='Register'}}
  <div class="row">
    {{x-input
      value=model.email
      classNames='col s12'
      errors=validations.attrs.model.email.messages
      type='email'
      label='Username'}}
  </div>
  <div class="row">
    {{x-input
      value=model.password
      classNames='col s12'
      errors=validations.attrs.model.password.messages
      type='password'
      label='Password'}}
  </div>

  <div class="row">
    {{x-input
      value=model.passwordConfirmation
      classNames='col s12'
      errors=validations.attrs.model.passwordConfirmation.messages
      type='password'
      label='Confirm Password'}}
  </div>
{{/x-card}}
{{yield}}
