<input
  value={{value}}
  onkeyup={{action (mut value) value='target.value'}}
  onchange={{action (mut value) value='target.value'}}
  placeholder={{Placeholder}}
  type={{type}}
  class={{if value
    (concat 'validate'
            ' '
            (if errors.length 'invalid' 'valid'))}}>

<label data-error={{_errorMessages}}>{{label}}{{yield}}</label>


