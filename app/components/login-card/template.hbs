{{#x-card
  title='Login To Peepchat'
  onSubmit=attrs.onSubmit
  buttonDisabled=validations.messages.length
  buttonText='Login'}}
  <div class="row">
    {{x-input
      value=model.email
      classNames='col s12'
      errors=validations.attrs.model.email.messages
      type='email'
      label='Username'}}
  </div>
  <div class="row">
    {{x-input
      value=model.password
      classNames='col s12'
      type='password'
      errors=validations.attrs.model.password.messages
      label='Password'}}
  </div>
{{/x-card}}
{{yield}}
